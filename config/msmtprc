# Configuração padrão para todas as contas
defaults
auth           off
tls            off
tls_trust_file /etc/ssl/certs/ca-certificates.crt
# Log para a saída padrão, ideal para Docker
logfile        /dev/stdout

# Configuração para a conta do Mailpit
account        mailpit
host           mailpit
port           1025 
from           "dev-environment@example.com"
# As linhas 'user' e 'password' foram removidas pois 'auth' está 'off'

# Define 'mailpit' como a conta a ser usada por padrão
account default : mailpit